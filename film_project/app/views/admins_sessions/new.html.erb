<h1>Admin Log In</h1>

<% if @admin.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@admin.errors.count, "error") %></h2>
 
    <ul>
    <%= @admin.errors.full_messages.each do |message| %>
       <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<p style="display:none;">
<%= link_to 'Admin Signup', '/adminsignup', :class => 'btn btn-info', style: 'color:white' %>
</p>

<%= link_to 'View Films', films_path, class: 'btn btn-primary', style: 'color:white' %>
<%= link_to 'User Login', '/cool', class: 'btn btn-primary', style: 'color:white' %>
<%= link_to 'View Games', games_path, class: 'btn btn-primary', style: 'color:white' %>
</br></br>

<% if flash[:error] -%>
  <p style="color:red; font-size: 22px" class="error"><%= flash[:error] %></p>
<% end -%>

<div class="jumbotron ">

<%= form_tag '/adminlogin' do %>

  <h3>Email: <%= text_field_tag :email, nil, class:'form-control' %></h3>
  <h3>Password: <%= password_field_tag :password, nil, class:'form-control' %></h3>
  <%= submit_tag "Login", :class => 'btn btn-success' %>

<% end %>
</div>