<%= form_for([@film, @film.reviews.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :rating %><br>
    <%= f.text_area :rating %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>