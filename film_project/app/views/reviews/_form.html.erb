
 <% if @film.errors.any? %>
  <% @film.errors.messages.each do |message| %>
    <div class="message"><%= message.last.last.html_safe %></div>
  <% end %>
<% end %>

<%= form_for([@film, @film.reviews.build]) do |f| %>
<% if flash[:error] -%>
  <p class="error"><%= flash[:error] %></p>
<% end -%>

  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter, :placeholder => 'Your name' %>
    <% if flash[:commenter] -%>
    <p class="error"><%= flash[:commenter] %></p>
      <% end -%>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, :placeholder => 'Your comment' %>
    <% if flash[:body] -%>
    <p class="error"><%= flash[:body] %></p>
      <% end -%>
  </p>
  <p>
    <%= f.label :rating %><br>
    <%= f.select :rating, ['1 Star', '2 Stars', '3 Stars', '4 Stars', '5 Stars'] %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>