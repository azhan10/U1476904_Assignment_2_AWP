<!--This is used to add new information of a film that is stored in the database-->
<div class="row">
  <div class="col-xs-6">
  <!--Displays the administrator user name-->
    <h1>Welcome <%= admin_user.name %></h1>
  </div>
  <div class="col-xs-6 text-right">
  </br>
    <!--Administrators can log out-->
    <%= link_to "User Logout", '/adminlogout', class: 'btn btn-danger', :style => 'color:white' %>
  </div>
</div>

<%= form_for @adminfilm, :url => { :action => :create, :type => @type, :this => @adminfilm } do |f| %>
 
 <!--Here is the code for displaying error messages-->
  <% if @adminfilm.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@adminfilm.errors.count, "error") %> prohibited
        this film from being saved:
      </h2>
      <ul>
        <% @adminfilm.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :filmtitle %><br>
    <%= f.text_field :filmtitle, class: 'form-control' %>
  </p>

  <p>
    <%= f.label :filmdescription %><br>
    <%= f.text_area :filmdescription, class: 'form-control' %>
  </p>


  <p>
    <%= f.label :filmdirector %><br>
    <%= f.text_field :filmdirector, class: 'form-control' %>
  </p>

  <p>
    <%= f.label :filmrating %><br>
    <%= f.text_field :filmrating, class: 'form-control' %>
  </p>

  <p>
    <%= f.label :filmstarname %><br>
    <%= f.text_field :filmstarname, class: 'form-control' %>
  </p>

  
  <p>
    <%= f.submit 'Add Film', class: 'btn btn-primary' %>
  </p>
 
<% end %>

<!--This directs users to the administrator account page-->
<%= link_to 'Back', '/adminCool', class: 'btn btn-info', style: 'color:white' %>