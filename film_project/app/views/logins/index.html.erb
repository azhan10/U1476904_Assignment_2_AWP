<div class="row">
  <div class="col-xs-6">
    <h1>Welcome <%= current_user.name %></h1>
  </div>
  <div class="col-xs-6 text-right">
  </br>
    <%= link_to "User Logout", '/logout', class: 'btn btn-danger', :style => 'color:white' %>
  </div>
</div>

<h2 class="text-center">Rented Films</h2>
<div class="row">
  <div class="col-xs-3">
    <p class="text-center" style="font-size: 22px">Film Title</p>
    
  </div>
  <div class="col-xs-7">
    <p class="text-center" style="font-size: 22px">Film Description</p>
  </div>
  <div class="col-xs-2">
    <p class="text-center" style="font-size: 22px">Rental Status</p>
  </div>
</div>

<% @rentals.each do |rental| %>
      <div class="row">
  <div class="col-xs-3">
    <p class="text-center"><%= rental.filmtitle %></p>
    
  </div>
  <div class="col-xs-7">
    <p class="text-center"><%= rental.filmduration %></p>
  </div>
  <div class="col-xs-2">
    <p class="text-center"><%= rental.rentalstatus %></p>
  </div>
  </div><hr/>
<% end %>

<%= link_to "View All Rent", '/rentals', class: 'btn btn-info', style: "color:white" %>

</br></br>


<h2 class="text-center">Purchased Films</h2>

<div class="row">
  <div class="col-xs-3">
    <p class="text-center" style="font-size: 22px">Film Title</p>
  </div>
  
</div>

<%  @buys.each do |buy| %>
      <div class="row">
  <div class="col-xs-3">
    <p class="text-center" style="font-size: 18px"> <%= buy.filmtitle %></p>
  </div>
  <div class="col-xs-7">
   <%= link_to 'Show', buy_path(buy), class: 'btn btn-success', style: 'color:white' %>
  </div>
  <div class="col-xs-2"></div>
  </div><hr/>
<% end %>


<%= link_to "View All Purchased Films", '/buys', class: 'btn btn-info', style: "color:white" %>

</br></br>

<h2 class="text-center">Account Details</h2>


  <% @users.each do |user| %>
      <h3>User Name: <%= user.name %></h3>
      <h3>Email: <%= user.email %></h3>
      <h3>First Name:<%= user.firstname %></h3>
      <h3>Second Name:<%= user.secondname %></h3>
      <h3>Address:<%= user.address %></h3>
      <h3>Post Code: <%= user.postcode %></h3>
      <h3>Date Created: <%= user.created_at %></h3>
      <h3><%= link_to 'Edit', edit_login_path(user.id), class: 'btn btn-success', style: 'color:white'  %> 
      <%= link_to 'Destroy', login_path(user.id),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', style: 'color:white'  %>
                
      </h3>
      
   
  <% end %>



<hr/>

</br></br>

<h2 class="text-center">Purchased Games</h2>

<div class="row">
  <div class="col-xs-3">
    <p class="text-center" style="font-size: 22px">Game Title</p>
    
  </div>
  <div class="col-xs-4">
    <p class="text-center" style="font-size: 22px">Platform</p>
  </div>
  <div class="col-xs-2"></div>
</div>
<%  @buyGames.each do |buyGame| %>
      <div class="row">
  <div class="col-xs-3">
    <p class="text-center"><%= buyGame.gametitle %></p>
  </div>
  <div class="col-xs-4">
  <p class="text-center"> <%= buyGame.platform %></p>
  </div>
  <div class="col-xs-2">
    <%= link_to 'Show', buy_game_path(buyGame), class: 'btn btn-success', style: 'color:white' %>
  </div>
  </div><hr/>
<% end %>

<%= link_to "View All Purchased Games", buy_games_index_path, class: 'btn btn-info', style: "color:white" %>