<!--The interface provides information of all current films purchesed by a user-->
<div class="row">
  <div class="col-xs-6">
    <h1>Welcome <%= current_user.name %></h1>
  </div>
  <div class="col-xs-6 text-right">
  </br>
   <!--Button below is used to log a user out-->
    <%= link_to "User Logout", '/logout', class: 'btn btn-danger', :style => 'color:white' %>
  </div>
</div>
</br>
<!--Button below directs user to another interface where their can buy a new film-->
<%= link_to 'Buy a new film', new_buy_path, class: 'btn btn-primary', :style => 'color:white' %>
</br></br>
 <!--Table below is display each row of purchased film-->
<table class="table">
  <tr>
    <th>Film Title</th>
     <th>Film Price</th>
    <th colspan="3"></th>
  </tr>

  <% @buys.each do |buy| %>
    <tr>
      <td><%= buy.filmtitle %></td>
      <td><%= buy.filmprice %></td>
      <td><%= link_to 'Show', buy_path(buy), class: 'btn btn-success', :style => 'color:white' %></td>
    </tr>
  <% end %>
</table>
<!--Button below returns the user back to the pervious page-->
<%= link_to "Home Page", '/cool', class: 'btn btn-info', :style => 'color:white' %>